{
  "$schema": "https://raw.githubusercontent.com/JanDeDobbeleer/oh-my-posh/main/themes/schema.json",
  "palette": {
    "user_text": "#ffffff",
    "path_text": "#f3f3f3",
    "git_text": "#7fff00",
    "git_modified": "#ff6347",
    "error_text": "#ff6347"
  },
  "blocks": [
    {
      "alignment": "left",
      "segments": [
        {
          "template": "# ",
          "type": "root",
          "style": "powerline",
          "properties": {
            "display": "bold"
          }
        },
        {
          "template": "\ue5ff  ",
          "type": "text",
          "style": "powerline",
          "foreground": "p:path_text",
          "properties": {
            "display": "bold"
          }
        },
        {
          "template": "{{ .Path }} ",
          "type": "path",
          "style": "powerline",
          "foreground": "p:path_text",
          "properties": {
            "style": "agnoster_short",
            "home_icon": "~",
            "max_depth": 2,
            "display": "bold"
          }
        },
        {
          "template": "{{ if ne .Code 0 }}[{{ reason .Code }}] {{ end }}",
          "type": "status",
          "style": "plain",
          "foreground": "p:error_text",
          "properties": {
            "display": "bold"
          }
        },
        {
          "type": "git",
          "style": "plain",
          "template": "\ue0a0 {{ add .Working.Changed .Staging.Changed }}",
          "foreground": "{{ if gt (add .Working.Changed .Staging.Changed) 0 }}p:git_modified{{ else }}p:git_text{{ end }}",
          "properties": {
            "fetch_status": true,
            "display": "bold"
          }
        }
      ],
      "type": "prompt"
    },
    {
      "alignment": "left",
      "newline": true,
      "segments": [
        {
          "template": "ó°ž‡ ",
          "type": "text",
          "style": "plain",
          "foreground": "p:path_text",
          "properties": {
            "display": "bold"
          }
        }
      ],
      "type": "prompt"
    }
  ],
  "final_space": true,
  "version": 3
}
